---
import "../styles/global.css";
import "@fontsource/atkinson-hyperlegible";
import "@fontsource/instrument-sans";
import "@fontsource/instrument-sans/700.css";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import Header from "@components/header.astro";
import Footer from "@components/footer.astro";

const { title, headerTheme } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title ? `${title} - The Hacker Press` : "The Hacker Press"}</title>

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="The Hacker Press"
      href={new URL("rss.xml", Astro.site)}
    />
    <SpeedInsights />
    <Analytics />
  </head>
  <body>
    <a class="absolute bg-[#ffdab3] border-1 font-atkinson text-xl p-3 m-3 left-0 -translate-y-20 focus:translate-y-0" href="#main-content">Skip to Main Content</a>
    <Header themeName={headerTheme} />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
